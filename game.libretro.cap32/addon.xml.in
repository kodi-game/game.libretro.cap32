<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.cap32"
		name="Amstrad - CPC (Caprice32)"
		version="4.2.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.amstrad.joystick" version="1.0.0"/>
		<import addon="game.controller.amstrad.keyboard" version="1.0.0"/>
		<import addon="game.controller.mouse" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Amstrad</platforms>
		<extensions>dsk|sna|zip|tap|cdt|voc</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Amstrad - CPC (Caprice32) 4.2</summary>
		<description lang="en_GB">Caprice32 is an emulator for the Amstrad CPC 8-bit home computer series. It faithfully imitates the CPC464, CPC664, and CPC6128 models.

Written by Ulrich Doewich.

Supported files: .dsk, .sna, .zip, .tap, .cdt, .voc</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
